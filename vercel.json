{
  "version": 2,
  "builds": [{ "src": "*.js", "use": "@vercel/node-server" }],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "/app.js",
      "methods": ["GET","POST","PUT","DELETE","OPTIONS"]
    }
  ],
  "env": {
    "MONGO_DB_URI": "@mongo_db_uri",
    "SECRET_KEY": "@secretkey"
  }
}